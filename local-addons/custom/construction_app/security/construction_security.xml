<?xml version="1.0" ?>
<odoo>
    <record id="module_construction_category" model="ir.module.category">
        <field name="name">Construction</field>
    </record>

    <record id="construction_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id"
               ref="module_construction_category"/>
        <field name="implied_ids"
               eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="construction_group_tile_seller" model="res.groups">
        <field name="name">Tile Seller</field>
        <field name="category_id"
               ref="module_construction_category"/>
        <field name="implied_ids"
               eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="construction_group_main_seller" model="res.groups">
        <field name="name">Main Seller</field>
        <field name="category_id"
               ref="module_construction_category"/>
        <field name="implied_ids"
               eval="[(4, ref('base.group_user'))]"/>
        <field name="users"
               eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]"/>
    </record>

    <record id="construction_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id"
               ref="module_construction_category"/>
        <field name="implied_ids"
               eval="[(4, ref('base.group_user'))]"/>
        <field name="users"
               eval="[(4, ref('base.user_root')),
                  (4, ref('base.user_admin'))]"/>
    </record>

    <record id="tile_seller_rule" model="ir.rule">
        <field name="name">Construction Tile Seller Access</field>
        <field name="model_id" ref="construction_app.model_product_product"/>
        <field name="domain_force">
            [('product_type', '=', 'tile')]
        </field>
        <field name="groups" eval="[(4,ref('construction_group_tile_seller'))]"/>
    </record>
</odoo>
